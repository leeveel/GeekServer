<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="fileLog" xsi:type="File" openFileCacheTimeout="3600" fileName="${basedir}/../center_logs/Log-${var:appIdFormat}-${date:universalTime=true:format=yyyyMMdd}-Debug.log" deleteOldFileOnStartup="false" maxArchiveFiles="1000" archiveAboveSize="10485760" layout="${longdate} ${level} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2} ${message}" />

    <target name="colorConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false" layout="${longdate} ${level:uppercase=true}  ${message}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="DarkYellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Magenta" />
    </target>
  </targets>


  <rules>
    <logger name="*" minlevel="Warn" maxlevel="Fatal" writeTo="fileLog" />
    <logger name="*" minlevel="Debug" maxlevel="Fatal" writeTo="colorConsole"/>
  </rules>
</nlog>